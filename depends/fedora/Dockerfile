FROM fedora

RUN dnf install -y @development-tools
RUN dnf install -y wget tar gcc ncurses-devel
RUN dnf install -y which bzip2 gcc-c++ bc cpio
RUN dnf install -y python bison cmake
RUN dnf install -y flex glibc.i686 libgcc.i686
RUN dnf install -y libstdc++.i686 glibc-devel.i686
RUN dnf install -y perl-Thread-Queue
RUN dnf install -y perl-ExtUtils-MakeMaker
